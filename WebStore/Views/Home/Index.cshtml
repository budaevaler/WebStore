                <partial name="Partial/_LeftSideBar"/>
            </div>

            <div class="col-sm-9 padding-right">
                <partial name="Partial/_Features_items" model="products"/>

                <partial name="Partial/_CategoryTab"/>

                <partial name="Partial/_Recommended_items"/>
            </div>
        </div>
    </div>
</section>